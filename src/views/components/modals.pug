    .search-modal__container 
      .search-modal__row 
        .search-modal__col
          .search-modal__icon 
            +search-svg.search-modal__svg
          input.search-modal__input(type="text" placeholder='Что вы хотите найти?')
        .search-modal__col
          .search-modal__item
            +submit-button.button--huge.button--big 
              |Поиск
          .search-modal__item
