mixin login-modal
  -
    var ddata = [
      {type: 'text', placeholder: 'Имя*'},
      {type: 'email', placeholder: 'E-mail*'},
      {type: 'phone', placeholder: 'Телефон*'},
      {type: 'text', placeholder: 'Название организации*'},
      {type: 'text', placeholder: 'ИНН*'},
      {type: 'text', placeholder: 'КПП*'},
    ]
  .modal.login-modal 
    .modal__container 
      h2.modal__title 
        |Войти
      .login-modal__tabs 
        .login-modal__item
          .login-modal__tab.active 
            |Есть аккаунт
        .login-modal__item 
          .login-modal__tab 
            |Регистрация
      .modal__inner
        .tabs-block.active
          form.form(action="/")
            each item in [{type: 'email', placeholder: 'E-mail'}, {type: 'password', placeholder: 'Пароль'}]
              .form__item 
                +input(type = item.type placeholder = item.placeholder)
            .form__item
              +submit-button
                |Войти
          .modal__inner 
            .login-modal__button(href="#") 
              |Забыли пароль?
        .tabs-block
          form.form(action="/")
            each item in ddata
              .form__item 
                +input(type = item.type placeholder = item.placeholder)
            .form__item 
              +textarea.form__textarea--small(placeholder = 'Номер лицензии на право реализации алкогольной продукции*')
            .form__item 
              +textarea(placeholder = 'Сообщение')
            .form__inner
              +checkbox
            .form__inner
              +submit-button
                |Зарегистрироваться

mixin password-recovery-modal 
  .modal.password-modal 
    .password-modal__container 
      .password-modal__back 
        +link-left 
          |Назад
      h2.password-modal__title 
        |Восстановить пароль
      .password-modal__text 
        |Чтобы восстановить пароль, укажите адрес электронный почты, на который был зарегистрирован ваш аккаунт
      .modal__inner
        form.form(action="/")
          .form__item 
            +input(type = 'email' placeholder = 'E-mail')
          .form__item 
            +submit-button 
              |Отправить

mixin password-create-modal 
  .modal.password-modal
    .password-modal__container 
      h2.password-modal__title
        |Создать новый пароль
      .modal__inner
        form.form(action="/")
          .form__item 
            +input(type = 'password' placeholder = 'Новый пароль')
          .form__item 
            +input(type = 'password' placeholder = 'Повторить новый пароль')
          .form__item 
            +submit-button 
              |Сохранить

mixin password-success-modal 
  .modal.password-modal 
    .password-modal__inner 
      h2.password-modal__heading
        |Пароль успешно изменен
      .modal__inner 
        +submit-button 
          |Авторизоваться

mixin response-modal 
  .modal.response-modal 
    .modal__container 
      .response-modal__icon 
        +ok-svg.response-modal__svg 
      h2.response-modal__title 
        |Вы зарегистрировались
      .response-modal__text 
        |На указанную при регистрации почту придет ссылка для подтверждения. Пожалуйста, пройдите по ней.

mixin product-modal 
  .modal.product-modal 
    .product-modal__container
      h2.modal__title 
        |Товар добавлен в корзину
      .product-modal__product
        .order-card.order-card--small
          .product-modal__row
            .product-modal__col
              .order-card__img 
                +picture('wine.jpg').order-card__picture
            .product-modal__col
              .order-card__content 
                .order-card__code 
                  |Артикул: 124041
                .order-card__title 
                  |Ле Мэтр де Винь Совиньон Блан, вино стол.сух.бел., 11%, 0,75л.
                ul.order-card__stats
                  each item in ['Франция', '0.75 л.', 'Белое', 'Сухое'] 
                    li.order-card__stats-item 
                      |#{item}
                .product-modal__prices 
                  .order-card__prices 
                    .order-card__prices-item 
                      .order-card__label 
                        |Базовая цена
                      .order-card__price 
                        |1 990 ₽ 
                    .order-card__prices-item 
                      .order-card__label 
                        |Персональная цена
                      .order-card__price 
                        |1 680 ₽ 
                    .order-card__prices-item 
                      .order-card__label 
                        |Количество
                      .order-card__price 
                        |32
      .product-modal__buttons 
        .product-modal__item 
          +outline-button.button--auto.button--wide
            |Вернуться в каталог
        .product-modal__item 
          +submit-button 
            |Оформить заказ

