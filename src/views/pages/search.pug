extends ../layouts/master

include ../components/breadcrumbs

include ../components/product-card


block content
  .search-page 
    section.section.section--first
      .container 
        .section__breadcrumbs(data-aos='fade-up')
          +breadcrumbs( page = 'Результаты поиска')
        h1(data-aos='fade-up')
          |Результаты поиска
        .search-page__matches(data-aos='fade-up')
          |Найдено товаров: 24
        .section__block(data-aos='fade-up')
          form.form.search-page__form(action="/")
            +input.form__input--default(type='text' placeholder = 'Поиск по товарам ') 
            .search-page__form-btn 
              +submit-button 
                |Поиск
      .section__block
        .grid-container.listing(data-aos='fade-up')
          - for (i = 0; i < 16; i++)
            +product-card.grid-container__item(bot=true)
          .listing__wrapper 
            +listing-loader-svg