extends ../layouts/master

include ../components/breadcrumbs

include ../components/product-card


block content
  .search-page 
    section.section.section--first
      .container 
        .section__breadcrumbs 
          +breadcrumbs( page = 'Результаты поиска')
        h1 
          |Результаты поиска
        .search-page__matches 
          |Найдено товаров: 24
        .section__block 
          form.form.search-page__form(action="/")
            +input.form__input--default(type='text' placeholder = 'Поиск по товарам ') 
            .search-page__form-btn 
              +submit-button 
                |Поиск
      .section__block
        .grid-container.listing
          - for (i = 0; i < 16; i++)
            +product-card(bot=true)
          .listing__wrapper 
            +listing-loader-svg