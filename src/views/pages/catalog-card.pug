extends ../layouts/master

include ../components/breadcrumbs
include ../components/product-card
include ../components/accordion


block variables
  - var mainClass = 'main--small'

block content
  -
    var ddata = [
      {label: 'Страна', text: 'Франция'},
      {label: 'Крепость', text: '5.0%'},
      {label: 'Объем', text: '0.75'},
      {label: 'Производитель', text: 'Даймонд Холдинг'},
      {label: 'Регион', text: 'Южная Австралия'},
      {label: 'Год', text: '2018'},
      {label: 'Потенциал хранения', text: '2-4 года'},
      {label: 'Выдержка', text: 'Бочка'},
      {label: 'Декантация', text: 'Аэрация'},
    ]
  .catalog-card
    section.catalog-card__section 
      .catalog-card__row 
        .catalog-card__col
          .mobile-only 
            .catalog-card__breadcrumbs 
              +breadcrumbs(items=['Вина и винные напитки'] page = 'Ле Мэтр де Винь Совиньон Блан, вино стол.сух.бел., 11%, 0,75л.')
          .catalog-card__button
            +link-left.button--huge
              |В каталог
          .catalog-card__container 
            .catalog-card__bg 
              +picture('catalog-card-bg.jpg').catalog-card__bg-img
            .catalog-card__image 
              +picture('catalog-card.png').catalog-card__picture
        .catalog-card__col
          .catalog-card__wrapper
            .desktop-only
              .section__breadcrumbs
                +breadcrumbs(items=['Вина и винные напитки'] page = 'Ле Мэтр де Винь Совиньон Блан, вино стол.сух.бел., 11%, 0,75л.')
            h1.catalog-card__title
              |Ле Мэтр де Винь Совиньон Блан, вино стол.сух.бел., 11%, 0,75л.
            .catalog-card__code 
              |Артикул: 124041
            ul.catalog-card__stats 
              each item in ['Испания', '0.75 л.', 'Красное', 'Сухое',]
                li.catalog-card__stats-item 
                  |#{item}
            .catalog-card__inner 
              .catalog-card__prices 
                .catalog-card__prices-item 
                  .catalog-card__label 
                    |Базовая цена
                  .catalog-card__prices-price 
                    |1 990 ₽
                .catalog-card__prices-item 
                  .catalog-card__label 
                    |Персональная цена
                  .catalog-card__prices-price 
                    |1 680 ₽
            .catalog-card__inner 
              .catalog-card__auth
                .catalog-card__auth-row 
                  .catalog-card__auth-col 
                    .catalog-card__auth-icon 
                      +auth-svg.catalog-card__auth-svg
                    .catalog-card__auth-content
                      p.catalog-card__auth-text 
                        |Цена доступна только #[br] для авторизованных пользователей
                      .catalog-card__auth-btn
                        +outline-button.button--catalog 
                          |Авторизоваться
                  .catalog-card__auth-col
                    +outline-button.button--catalog 
                      |Авторизоваться
            .catalog-card__inner
              +accordion
            .catalog-card__inner 
              ul.catalog-card__list
                each item in ddata
                  li.catalog-card__item 
                    .catalog-card__item-col
                      .catalog-card__label 
                        |#{item.label}
                    .catalog-card__item-col
                      .catalog-card__item-text 
                        |#{item.text}
            .catalog-card__inner 
              h2.catalog-card__heading 
                |О производителе
              p.catalog-card__text
                |Глобальная популярность Lindeman's была обусловлена позитивной философией доктора Генри Линдмана, который основал  винодельню Lindeman's в Долине Хантер в 1843 году. Вина идеально подходящие для повседневных моментов и для особых случаев, что сделало их невероятно популярными во всем мире. Винодельня Lindeman's обладает безупречной репутацией неизменного качества.
          .catalog-card__inner.catalog-card__panel
            .catalog-card__panel-col
              +counter.counter--big
            .catalog-card__panel-col
              button.button.button--icon.button--icon--big
                .button__icon 
                  +cart-button-svg.button__svg
                .button__text 
                  |Добавить в корзину
    section.section.section--big 
      .container 
        .catalog-card__slider 
          .catalog-card__top 
            h2 
              |Похожие товары
            .catalog-card__buttons 
              .slider-buttons
                button.slider-buttons__item.slider-buttons__left(data-slider-button = '3')
                  +small-arrow-svg.slider-buttons__svg
                button.slider-buttons__item(data-slider-button = '4')
                  +small-arrow-svg.slider-buttons__svg
          .catalog-card__slider-slider 
            .swiper-container.swiper-container--visible.swiper-container--slide-width-auto.swiper-container--slide-height-max(data-slider-id='10' data-slider-prev='3' data-slider-next='4')
              .swiper-wrapper 
                - for (i = 0; i < 10; i++)
                  .swiper-slide
                    +product-card.catalog-card__slide