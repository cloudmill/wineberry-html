extends ../layouts/master

include ../components/breadcrumbs
include ../components/aside


block variables
  - var mainClass = "main--default"
  - var bodyClass = "body--gray"

block header 
  +header(auth = true)

block content
  .profile-page.section.section--default
    .mobile-only(data-aos='fade-up')
      +aside-profile(first = 'active')
    .profile-page__row.profile-page__row--big 
      .profile-page__col(data-aos='fade-up')
        +aside-profile(first = 'active' card = true)
      .profile-page__col
        .section__breadcrumbs(data-aos='fade-up')
          +breadcrumbs(items = ['Личный кабинет'] page = 'Мои заказы')
        h1(data-aos='fade-up')
          |Личный кабинет
        .mobile-only 
          .profile-page__exit(data-aos='fade-up')
            .profile-page__exit-icon 
              +exit-svg.profile-page__exit-svg 
            .profile-page__exit-text 
              |Выйти
        .mobile-only 
          .profile-page__card(data-aos='fade-up')
            +card
        .profile-page__offset
          .profile-page__info
            .profile-page__info-item.big(data-aos='fade-up')
              .profile-page__info-container
                .profile-page__info-row
                  .profile-page__info-icon 
                    +profile-smile-svg.profile-page__info-svg
                  .profile-page__info-content
                    .profile-page__info-label 
                      |Ваш персональный менеджер
                    .profile-page__info-wrapper 
                      .profile-page__info-heading 
                        |Жильцов Сергей
                ul.profile-page__info-links
                  li.profile-page__info-contact 
                    .profile-page__info-img 
                      +call-svg
                    a.profile-page__info-link(href="#") 
                      |8 911 286 2563
                  li.profile-page__info-contact 
                    .profile-page__info-img 
                      +mail-svg
                    a.profile-page__info-link(href="#") 
                      |ksh@cloudmill.ru
            .profile-page__info-item(data-aos='fade-up')
              .profile-page__info-container
                .profile-page__info-row
                  .profile-page__info-icon 
                    +profile-stat-svg.profile-page__info-svg
                  .profile-page__info-content
                    .profile-page__info-label 
                      |Уровень цен
                    .profile-page__info-wrapper 
                      .profile-page__info-heading.tooltip
                        |Розница
                        span.tooltip__icon 
                          +tooltip-svg.tooltip__svg 
                        .tooltip__container 
                          |Данный тип определяет размер скидки на продукцию. Подробнее о размерах скидок можно уточнить у вашего персонального менеджера.
            .profile-page__info-item(data-aos='fade-up')
              .profile-page__info-col 
                .profile-page__info-block 
                  .profile-page__info-container
                    .profile-page__info-label 
                      |Лимит по задолженности
                    .profile-page__info-inner
                      .profile-page__info-heading 
                        |345 032 ₽
                .profile-page__info-block 
                  .profile-page__info-container
                    .profile-page__info-label 
                      |Лимит по отсрочке платежа
                    .profile-page__info-inner
                      .profile-page__info-heading 
                        |30 дней
        .profile-page__section.profile-page__section--big
          h2.profile-page__heading(data-aos='fade-up')
            |Заказы
          .profile-page__orders 
            .profile-page__orders-top(data-aos='fade-up')
              .profile-page__orders-row 
                each item in ['№', 'Статус', 'Дата обновления', 'Ответственный менеджер']
                  .profile-page__orders-col
                    .profile-page__orders-label 
                      |#{item}
            .profile-page__orders-list(data-aos='fade-up')
              a.profile-page__orders-link(href="#") 
                .profile-page__orders-item 
                  .profile-page__orders-row 
                    .profile-page__orders-col
                      .profile-page__orders-text 
                        |21
                    .profile-page__orders-col
                      .profile-page__status.success
                        .profile-page__status-icon 
                          +check-svg.profile-page__status-svg.profile-page__status-stroke
                        .profile-page__status-text 
                          |Оплачено
                    .profile-page__orders-col
                      .profile-page__orders-text 
                          |21.09.2021
                    .profile-page__orders-col
                      .profile-page__orders-inner
                        .profile-page__orders-text 
                          |Игорь Дудников
                        .profile-page__orders-icon 
                          +small-arrow-svg.profile-page__orders-svg 
              a.profile-page__orders-link(href="#")
                .profile-page__orders-item 
                  .profile-page__orders-row 
                    .profile-page__orders-col
                      .profile-page__orders-text 
                        |21
                    .profile-page__orders-col
                      .profile-page__status.pending
                        .profile-page__status-icon 
                          +clock-svg.profile-page__status-svg.profile-page__status-stroke
                        .profile-page__status-text 
                          |Ждет оплаты
                    .profile-page__orders-col
                      .profile-page__orders-text 
                          |21.09.2021
                    .profile-page__orders-col
                      .profile-page__orders-inner
                        .profile-page__orders-text 
                          |Ржевский Универсам N 43 АО
                        .profile-page__orders-icon 
                          +small-arrow-svg.profile-page__orders-svg 
              - for (i = 0; i < 5; i++)
                a.profile-page__orders-link(href="#")
                  .profile-page__orders-item 
                    .profile-page__orders-row 
                      .profile-page__orders-col
                        .profile-page__orders-text 
                          |21
                      .profile-page__orders-col
                        .profile-page__status
                          .profile-page__status-icon 
                            +delivered-svg.profile-page__status-svg.profile-page__status-fill
                          .profile-page__status-text 
                            |Доставлено
                      .profile-page__orders-col
                        .profile-page__orders-text 
                            |21.09.2021
                      .profile-page__orders-col
                        .profile-page__orders-inner
                          .profile-page__orders-text 
                            |Игорь Дудников
                          .profile-page__orders-icon 
                            +small-arrow-svg.profile-page__orders-svg 
          .mobile-only
            .profile-page__block(data-aos='fade-up')
              ul.profile-page__block-list
                li.profile-page__block-item 
                  .profile-page__orders-label 
                    |Номер заказа
                  .profile-page__orders-text 
                    |21
                li.profile-page__block-item 
                  .profile-page__orders-label 
                    |Статус
                  .profile-page__status.success
                    .profile-page__status-icon 
                      +check-svg.profile-page__status-svg
                    .profile-page__status-text 
                      |Оплачено
                li.profile-page__block-item 
                  .profile-page__orders-label 
                    |Дата обновления
                  .profile-page__orders-text 
                    |21.09.2021
                li.profile-page__block-item 
                  .profile-page__orders-label 
                    |Ответственный менеджер
                  .profile-page__orders-text 
                    |Игорь Дудников
              .profile-page__block-bot
                a.profile-page__block-button(href="#") 
                  .profile-page__block-text 
                    |Подробнее
                  .profile-page__orders-icon 
                    +small-arrow-svg.profile-page__orders-svg  
            - for (i = 0; i < 3; i++)
              .profile-page__block(data-aos='fade-up')
                ul.profile-page__block-list
                  li.profile-page__block-item 
                    .profile-page__orders-label 
                      |Номер заказа
                    .profile-page__orders-text 
                      |21
                  li.profile-page__block-item 
                    .profile-page__orders-label 
                      |Статус
                    .profile-page__status.pending
                      .profile-page__status-icon 
                        +search-sort-svg.profile-page__status-svg
                      .profile-page__status-text 
                        |Проверка наличия товара
                  li.profile-page__block-item 
                    .profile-page__orders-label 
                      |Дата обновления
                    .profile-page__orders-text 
                      |21.09.2021
                  li.profile-page__block-item 
                    .profile-page__orders-label 
                      |Ответственный менеджер
                    .profile-page__orders-text 
                      |Игорь Дудников
                .profile-page__block-bot
                  .profile-page__block-button 
                    .profile-page__block-text 
                      |Подробнее
                    .profile-page__orders-icon 
                      +small-arrow-svg.profile-page__orders-svg 

