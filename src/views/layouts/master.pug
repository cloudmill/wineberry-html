include ../components/svg

include ../components/header
include ../components/footer
include ../components/grid-test
include ../components/buttons
include ../components/modals
include ../components/picture
include ../components/form-components

block variables
  -
    var mainClass = ""
  -
    var bodyClass = ""



doctype html

html(lang='ru')
  
  head
    meta(charset="utf-8")
    title= data.title
    meta(name="viewport" content="width=device-width, initial-scale=1, user-scalable=no")
  
  body.body.body--unvisible(class=bodyClass)
    
    block loader

    .wrapper
      block header
        +header

      main.main(class=mainClass)
        block content
        +search-modal
        +ask-modal
        +response-modal(id = 'ask' text = 'Спасибо, мы с вами свяжемся в ближайшее время.')

      block footer
        +footer

      block grid-test
        +grid-test

    block scripts
