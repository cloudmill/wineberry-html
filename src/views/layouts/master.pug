include ../components/svg

include ../components/header
include ../components/footer
include ../components/grid-test
include ../components/buttons
include ../components/modals
include ../components/picture
include ../components/form-components
include ../components/counter
include ../components/card
include ../components/select
include ../components/disclaimer

block variables
  -
    var mainClass = ""
  -
    var bodyClass = ""



doctype html

html(lang='ru')
  
  head
    meta(charset="utf-8")
    title= data.title
    meta(name="viewport" content="width=device-width, initial-scale=1, user-scalable=no")
    //- favicon
    link(rel="icon", type='image/png' href="assets/images/favicon_16x16.png" sizes='16x16')
    link(rel="icon", type='image/png' href="assets/images/favicon_32x32.png" sizes='32x32')
    link(rel="shortcut icon", href="assets/images/favicon.ico")
    //- IOS
    link(rel="apple-touch-icon", href="assets/images/svg/appletouch-icon.svg")
    //- opengraph
    meta(property='og:image' content='assets/images/opengraph.jpg')
  
  body.body.body--unvisible.body--hidden(class=bodyClass)
    
    block loader

    block disclaimer 
      +disclaimer

    .wrapper
      block header
        +header

      main.main(class=mainClass)
        block content
        +search-modal
        +ask-modal
        +response-modal(id = 'ask' title= 'Отправлено' text = 'Спасибо, мы с вами свяжемся в ближайшее время.')
        +response-modal(id = 'reg' title = 'Вы зарегистрировались' text = 'Спасибо, мы с вами свяжемся в ближайшее время.')
        +login-modal
        +password-recovery-modal
        +cart-modal(empty = true)

      block footer
        +footer

      block grid-test
        +grid-test

    block scripts
